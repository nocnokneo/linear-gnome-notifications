{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@girs/gjs", "@girs/gnome-shell"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}